@page "/categorysender"
@using BlazorWasamAssignment.Models
@inject BlazorWasamAssignment.AppStateContainer state
@inject NavigationManager navigate

<h3>Category Sender</h3>
<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Category Id</th>
                <th>Category Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr @onclick="()=>SelectCategory(category.CategoryId)">
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private Categories categories;

    protected override void OnInitialized()
    {
        categories = new Categories();
        state.OnStateChanged += StateHasChanged;
    }

    public void SelectCategory(int id)
    {
        state.UpdateState(id);
        navigate.NavigateTo("/productreceiver");
    }

}
